<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/CardView"
    android:layout_width="match_parent"
    android:layout_height="115dp"
    android:layout_margin="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            >

            <TextView
                android:id="@+id/jobPositionName"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="#DDDDDD"
                android:fontFamily="@font/dmsansbold"
                android:textColor="#150B3D" />

            <LinearLayout
                android:id="@+id/jobDescrrLayout"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/jobPositionName"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/companyName"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="0"
                    android:fontFamily="@font/dmsansregular"
                    android:textColor="#150B3D"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="0"
                    android:fontFamily="@font/dmsansregular"
                    android:textColor="#150B3D"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/jobLocation"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="0"
                    android:fontFamily="@font/dmsansregular"
                    android:textColor="#150B3D"
                    android:textSize="10sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/priceTextLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/jobDescrrLayout"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/jobSalary"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/jobDescrrLayout"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="0"
                    android:fontFamily="@font/dmsansbold"

                    android:background="#DDDDDD"
                    android:textColor="#1A73E9"
                    android:textSize="20sp" />




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/priceTextLayout"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    style="@style/CardView"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"

                    android:backgroundTint="#DDDDDD"
                    app:cardCornerRadius="15dp"
                    >


                    <TextView
                        android:id="@+id/jobType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0"
                        android:fontFamily="@font/dmsansbold"
                        android:textColor="@color/white"
                        android:textSize="15sp" />


                </com.google.android.material.card.MaterialCardView>


            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:backgroundTint="#DDDDDD"

                android:id="@+id/applyButton"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/dmsansbold"
                android:textSize="12sp"
                app:cardCornerRadius="15dp" />




        </RelativeLayout>


</com.google.android.material.card.MaterialCardView>

