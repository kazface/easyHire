<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".jobDetailedFragment"
    android:background="@drawable/background3">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:paddingTop="50dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/jobPositionName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:fontFamily="@font/dmsansbold"
                android:text="Product Designer"
                android:textColor="#150B3D" />


            <LinearLayout
                android:id="@+id/jobDescrrLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/google_logo"
                    />

                <TextView
                    android:id="@+id/companyName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="0"
                    android:fontFamily="@font/dmsansregular"
                    android:text="Google inc"
                    android:textColor="#150B3D"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="0"
                    android:fontFamily="@font/dmsansregular"
                    android:text="•"
                    android:textColor="#150B3D"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/jobLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="0"
                    android:fontFamily="@font/dmsansregular"
                    android:text="Kuala-Lumpur"
                    android:textColor="#150B3D"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:id="@+id/vaccinationInfoLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_baseline_medical_services_24"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="0"
                    android:fontFamily="@font/dmsansregular"
                    android:text="Vaccination needed"
                    android:textColor="#150B3D"
                    android:textSize="20dp" />


            </LinearLayout>





            <com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/jobDescrrCard"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                style="@style/CardView"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="25dp"
                        android:fontFamily="@font/dmsansbold"
                        android:text="Job description"
                        android:textColor="#150B3D" />

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:fontFamily="@font/dmsansregular"
                        android:text='
    We are a group of multinational web developers who are fascinated by next-generation web technologies. We genuinely care about bringing an enjoyable web experience to our next billion users. We value fundamentals more than the ever-changing wind in the front end landscape.\n\n
    We believe in "HTML for the content, CSS for the presentation, JavaScript for the interaction". We cut following the grain, not against it.
    '
                        android:textColor="#150B3D" />

                </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                style="@style/CardView"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="25dp"
                        android:fontFamily="@font/dmsansbold"
                        android:text="Skills needed"
                        android:textColor="#150B3D" />

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:fontFamily="@font/dmsansregular"
                        android:text='•Data Science\n•Data Science\n•Data Science\n•Data Science'
                        android:textColor="#150B3D" />



                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>

    <Button
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/rounded_primary_button"
        android:text="Apply"
        android:textSize="25dp"
        android:fontFamily="@font/dmsansbold"
        />





</RelativeLayout>