<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/CardView"
    android:id="@+id/cvCardView"
    android:layout_width="match_parent"
    android:layout_height="115dp"
    android:layout_margin="12dp"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/titleLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/cvTitle"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"

                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/dmsansbold"
                    android:text="Python developer"
                    android:textColor="#150B3D"
                    android:textSize="20dp" />

                <CheckBox
                    android:id="@+id/saveCheckBox"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:background="@android:color/transparent"
                    android:button="@drawable/book_mark_check_box"
                    android:text=""
                    app:cardCornerRadius="15dp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/cvLocationLayout"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/titleLayout"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cvFullName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="0"
                    android:fontFamily="@font/dmsansregular"
                    android:text="Kakimov Batyrkhan"
                    android:textColor="#150B3D"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/cvLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="0"
                    android:fontFamily="@font/dmsansregular"
                    android:text="Astana"
                    android:textColor="#150B3D"
                    android:textSize="15sp" />



            </LinearLayout>
            <LinearLayout
                android:id="@+id/cvDescrLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cvLocationLayout"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cvDescriptionText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="0"
                    android:fontFamily="@font/dmsansitalic"
                    android:text="As a motivated person, I am always developing and always learning new technologies. I approach the..."
                    android:textColor="#1A73E9"
                    android:textSize="15sp" />
            </LinearLayout>


            <RelativeLayout
                android:layout_alignParentRight="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="20dp"
                android:id="@+id/cvPictureLayout"
                android:layout_width="50dp"
                android:layout_height="50dp"
                >
                <androidx.cardview.widget.CardView
                    android:backgroundTint="#DDBCBCBC"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="75dp"
                    app:cardPreventCornerOverlap="false"
                    >
                    <ProgressBar
                        android:id="@+id/progressCvBar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="visible" />
                    <ImageView
                        android:scaleType="centerCrop"
                        android:id="@+id/cvPictureImage"
                        android:src="@drawable/profile_pic_gray"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>

        </RelativeLayout>






</com.google.android.material.card.MaterialCardView>

